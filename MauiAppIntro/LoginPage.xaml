<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIntro.LoginPage"
             Title="Login">
    
    <Grid ColumnDefinitions="1.5*,1*">
        <!-- Left Side - Logo -->
        <BoxView 
            BackgroundColor="#1E88E5"
            Grid.Column="0"/>
            
        <Image 
            Source="jv_logo"
            Grid.Column="0"
            Aspect="AspectFit"
            WidthRequest="200"
            HeightRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
            
        <!-- Right Side - Login Form -->
        <VerticalStackLayout 
            Grid.Column="1"
            Spacing="30"
            Padding="40"
            VerticalOptions="Center">
            
            <!-- Usuario -->
            <Label 
                Text="Usuario"
                FontSize="14"/>
            <Border 
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8">
                <Entry 
                    x:Name="UsuarioEntry"
                    Placeholder="Ingrese su usuario"/>
            </Border>
            
            <!-- Contraseña -->
            <Label 
                Text="Contraseña"
                FontSize="14"/>
            <Border 
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8">
                <Entry 
                    x:Name="PasswordEntry"
                    IsPassword="True"
                    Placeholder="Ingrese su contraseña"/>
            </Border>
            
            <!-- Botón Iniciar Sesión -->
            <Button 
                Text="INICIAR SESIÓN"
                BackgroundColor="#1E88E5"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="45"/>
            
        </VerticalStackLayout>
    </Grid>
</ContentPage>
