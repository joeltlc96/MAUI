<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIntro.LoginPage"
             Title="Login"
             BackgroundColor="#F5F5F5">
    
    <ScrollView>
        <VerticalStackLayout 
            Spacing="30"
            Padding="40"
            VerticalOptions="Center">
            
            <!-- Logo/Imagen -->
            <Frame 
                BackgroundColor="#2196F3"
                WidthRequest="120"
                HeightRequest="120"
                CornerRadius="60"
                HorizontalOptions="Center"
                Padding="0">
                <Image 
                    Source="person"
                    HeightRequest="60"
                    WidthRequest="60"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Frame>
            
            <!-- Campo de Usuario -->
            <Frame 
                BackgroundColor="White"
                BorderColor="#DDDDDD"
                CornerRadius="10"
                Padding="15,5"
                Margin="0,0,0,10">
                <Entry 
                    x:Name="UsuarioEntry"
                    Placeholder="Usuario"
                    PlaceholderColor="#999999"
                    TextColor="Black"
                    ClearButtonVisibility="WhileEditing"
                    FontSize="16"/>
            </Frame>
            
            <!-- Campo de Contraseña -->
            <Frame 
                BackgroundColor="White"
                BorderColor="#DDDDDD"
                CornerRadius="10"
                Padding="15,5"
                Margin="0,0,0,10">
                <Entry 
                    x:Name="PasswordEntry"
                    Placeholder="Contraseña"
                    PlaceholderColor="#999999"
                    TextColor="Black"
                    IsPassword="True"
                    ClearButtonVisibility="WhileEditing"
                    FontSize="16"/>
            </Frame>
            
            <!-- Botón de Iniciar Sesión -->
            <Button 
                Text="INICIAR SESIÓN"
                TextColor="White"
                BackgroundColor="#0078D7"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,20,0,0"
                Clicked="OnLoginClicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
