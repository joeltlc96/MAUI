<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppXamlDiseno.TiposLayout.UnGridLayout"
             Title="UnGridLayout">

    <Grid RowDefinitions="*,*" ColumnDefinitions="*"
          BackgroundColor="LightYellow" 
          HorizontalOptions="Fill" 
          VerticalOptions="Fill"
          ColumnSpacing="25" 
          RowSpacing="5">      

        <HorizontalStackLayout BackgroundColor="Blue" 
                               Grid.Row="0" 
                               Grid.Column="0"
                               Margin="25"
                               Padding="5">
            <Label Text="Titulo" WidthRequest="200" TextColor="White" FontSize="Subtitle" FontAttributes="Bold" />
            <Entry Placeholder="Usuario" WidthRequest="150" TextColor="White" IsPassword="True"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout BackgroundColor="Green" 
                               Grid.Row="1" 
                               Grid.Column="0"  
                               Margin="25"
                               Padding="5">
            <Button Text="Iniciar sesion" HorizontalOptions="Center" />
        </HorizontalStackLayout>
    </Grid>

</ContentPage>