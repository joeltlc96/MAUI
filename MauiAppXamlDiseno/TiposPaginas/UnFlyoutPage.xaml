<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="MauiAppXamlDiseno.TiposPaginas.UnFlyoutPage"  
             Title="Un Maestro-Detalle"
             FlyoutLayoutBehavior="Split" IsVisible="True">  

    <FlyoutPage.Flyout>  
        <ContentPage Title="Menú" BackgroundColor="Aquamarine">  
            <StackLayout>  
                <Image Source="dotnet_bot.png" Aspect="AspectFit"/>
                <Label Text="Elemento 1" />  
                <Label Text="Elemento 2" />  
            </StackLayout>  
        </ContentPage>  
    </FlyoutPage.Flyout>  

    <FlyoutPage.Detail>  
        <ContentPage>  
            <StackLayout>  
                <Label Text="Detalle de la página" />  
            </StackLayout>  
        </ContentPage>  
    </FlyoutPage.Detail>  

</FlyoutPage>